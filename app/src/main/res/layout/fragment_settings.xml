<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/casino_green"
        tools:context=".ui.settings.SettingsFragment">

    <!-- You can add other UI components here if needed -->

    <Button
            android:text="Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="444dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="239dp"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Enlarged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            android:layout_marginEnd="48dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="239dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="444dp"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/aceofspades" android:id="@+id/imageView4"
            android:layout_marginEnd="132dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="132dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>