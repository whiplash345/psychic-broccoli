<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.myapplication.ui.solitaire.SolitaireFragment">

    <!-- Placeholder for the Solitaire Game UI components -->
    <GridLayout
            android:id="@+id/solitaireBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="7"
            android:rowCount="4"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="#E94B4B" android:layout_marginTop="50dp">

        <!-- Add Views here to represent the card piles (e.g., ImageViews for each card) -->

        <TextView
                android:text="This is the Solitaire fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_row="2" android:layout_column="0"
                android:id="@+id/textView2" android:textSize="34sp" android:textAlignment="center"
                android:textStyle="bold" android:background="#00FFFFFF"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>